<!DOCTYPE html>
<html>
  <head>
    <title>BattleshipWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <% flash.each do |type, message| %>
      <%= content_tag :div, message, class: type %>
    <% end %>
    <% if current_user %>
      <%= "Logged in as #{current_user.name}" %> | <%= link_to 'Home', '/'%> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Home', '/'%> | <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', '/register'%>
    <% end %>
    <hr>
    <%= yield %>
  </body>
</html>
